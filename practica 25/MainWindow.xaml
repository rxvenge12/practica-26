<Window x:Class="practica_25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Course Enrollment System" Height="450" Width="800">
    <Grid>
        <!-- Контролы интерфейса пользователя -->
        <ListBox x:Name="courseListBox" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="250" SelectionChanged="CourseListBox_SelectionChanged"/>
        <Label Content="Детали курса" HorizontalAlignment="Left" Margin="300,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="courseDetailsTextBox" HorizontalAlignment="Left" Height="150" Margin="300,40,0,0" VerticalAlignment="Top" Width="400" IsReadOnly="True"/>
        <Button x:Name="enrollButton" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="300,200,0,0" VerticalAlignment="Top" Width="115" Click="EnrollButton_Click"/>
        <Button x:Name="cancelButton" Content="Отменить регистрацию" HorizontalAlignment="Left" Margin="442,200,0,0" VerticalAlignment="Top" Width="150" Click="CancelButton_Click"/>
    </Grid>
</Window>